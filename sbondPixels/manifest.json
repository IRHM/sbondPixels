{

  "manifest_version": 2,
  "name": "sbondPixels",
	"short_name": "sbPx",
  "version": "1.0",
  "description": "Shows the current resolution of the window.",
	"categories": ["UI", "web", "develop", "resolution", "dimensions"],

	"applications": {
		"gecko": {
			"id": "pixels@sbond.co"
		}
	},

  "icons": {
		"24": "icons/icon.svg",
    "48": "icons/icon.svg",
		"96": "icons/icon.svg"
  },
	
	"permissions": [
    "storage"
	],
  
  "browser_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "sbondPixels"
  },
	
	"background": {
    "scripts": ["js/state.js"]
  },

  "content_scripts": [
		{
      "matches": ["<all_urls>"],
      "js": ["js/main.js"]
    }
  ]

}